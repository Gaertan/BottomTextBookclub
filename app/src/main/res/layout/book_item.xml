<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutLibroDetails"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardBackgroundColor="#8BCA245E"
    app:cardCornerRadius="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_book"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:dividerPadding="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTituloLibroCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginEnd="@dimen/text_margin"
            android:layout_marginBottom="@dimen/text_margin"
            android:background="#8BCA245E"
            android:backgroundTint="@color/md_theme_dark_inverseSurface"
            android:backgroundTintMode="src_atop"
            android:foregroundGravity="center_vertical|center|center_horizontal"
            android:text="placeholder"
            android:textAppearance="?attr/textAppearanceListItem" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewLibroCard"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_weight="1"
                android:foregroundGravity="center_vertical|center|center_horizontal"
                app:srcCompat="@drawable/i9788493806125" />

            <RatingBar
                android:id="@+id/ratingBarLibro"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imageViewLibroCard"
                android:layout_centerInParent="true"
                android:backgroundTintMode="add"
                android:clickable="false"
                android:fitsSystemWindows="false"
                android:foregroundGravity="center"
                android:foregroundTintMode="add"
                android:isIndicator="false"
                android:max="5"
                android:numStars="5"
                android:progressBackgroundTint="#000000"
                android:progressBackgroundTintMode="src_atop"
                android:stepSize="0.1" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textViewIsbnLibroCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_margin="@dimen/text_margin"
            android:background="#8BCA245E"
            android:foregroundGravity="center_vertical|center|center_horizontal"
            android:text="placeholder"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/textViewDescripcionLibroCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:background="#8BCA245E"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="placeholder" />
    </LinearLayout>

</androidx.cardview.widget.CardView>